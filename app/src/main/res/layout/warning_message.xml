<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/warning"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:background="@drawable/message_border"
    android:orientation="vertical"
    android:paddingVertical="40dp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/success_View"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:paddingTop="-10dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/warning" />

    <TextView
        android:id="@+id/success_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/quicksand_bold"
        android:gravity="center"
        android:text="Are you sure?"
        android:textColor="#FF6B00"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/warning_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/quicksand"
        android:gravity="center"
        android:layout_marginHorizontal="20dp"
        android:text="An error occurred."
        android:textColor="#717171"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/warning_dialog_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="#717171"
            android:fontFamily="@font/quicksand_medium"
            android:text="No"
            android:paddingHorizontal="40dp"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/warning_dialog_ok_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:paddingHorizontal="40dp"
            android:backgroundTint="#FF6B00"
            android:fontFamily="@font/quicksand_medium"
            android:text="Yes"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18dp" />
    </LinearLayout>

</LinearLayout>